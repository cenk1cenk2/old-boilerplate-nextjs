{
  "compilerOptions": {
    "target": "es5",
    "paths": {
      "@src/*": ["*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@interfaces/*": ["interfaces/*"],
      "@context/*": ["interfaces/pages/*"],
      "@pages/*": ["pages/*"],
      "@themes/*": ["themes/*"],
      "@templates/*": ["templates/*"],
      "@page-templates/*": ["templates/pages/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "src",
    "strictNullChecks": false,
    "noEmit": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "typings", "next", "next/types/global", "src/typings"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
